# LLM backend provider: "anthropic" | "openai" | "grok"
# Can also be overridden per-run from the portal UI.
LLM_PROVIDER=anthropic

# API keys — set the key(s) for the provider(s) you want to use.
# Any provider with a missing key will be shown as "not configured" in the UI.
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
# XAI_API_KEY is shared with the Grok LLM provider and the video producer (see below)

# Optional: override default models per provider
# ANTHROPIC_MODEL=claude-sonnet-4-20250514
# OPENAI_MODEL=gpt-4o
# XAI_MODEL=grok-2-1212

# Server port
COMPILER_PORT=3000
EDITOR_PORT=3001
SITE_AUDITOR_PORT=3002
STRATEGIST_PORT=3003
DISTRIBUTOR_PORT=3004
OPTIMIZER_PORT=3005
WMA_PORT=3006

# Marketing Staging Sync (legacy single-site)
WP_BASE_URL=
WP_USERNAME=
WP_APP_PASSWORD=
# WP_STATUS=draft

# WP Staging Publishers (per-site credentials)
WP_LLIF_STAGING_URL=
WP_LLIF_STAGING_USER=
WP_LLIF_STAGING_APP_PASSWORD=

WP_BESTLIFE_STAGING_URL=
WP_BESTLIFE_STAGING_USER=
WP_BESTLIFE_STAGING_APP_PASSWORD=

# Zoho Social (OAuth2)
ZOHO_SOCIAL_CLIENT_ID=
ZOHO_SOCIAL_CLIENT_SECRET=
ZOHO_SOCIAL_REFRESH_TOKEN=
ZOHO_SOCIAL_ZSID=
# ZOHO_SOCIAL_API_BASE=https://social.zoho.com

# Optional: override channel IDs per platform (skips API lookup)
# ZOHO_SOCIAL_CHANNEL_LINKEDIN=
# ZOHO_SOCIAL_CHANNEL_X=
# ZOHO_SOCIAL_CHANNEL_FACEBOOK=
# ZOHO_SOCIAL_CHANNEL_INSTAGRAM=

# X (Twitter) Direct API (OAuth 1.0a)
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=

# LinkedIn Direct API
LINKEDIN_ACCESS_TOKEN=
LINKEDIN_ORG_ID=
LINKEDIN_PERSON_ID=

# xAI — used for both Grok LLM provider AND Marketing Video Producer agent
XAI_API_KEY=
# XAI_API_BASE_URL=https://api.x.ai   (chat API base; /v1 is appended automatically)
# XAI_VIDEO_MODEL=imagine-video-v1
VIDEO_PRODUCER_PORT=3008
